        List<string> GetAllProcess();

        /// <summary>
        /// 获取所有记录
        /// </summary>
        /// <returns></returns>
        DataTable GetAllDinnerProcess(string process);

        /// <summary>
        /// 获取所有记录
        /// </summary>
        /// <returns></returns>
        DataTable GetAllDinnerProcessClass(string process,string Class);

        /// <summary>
        /// 获取所有记录
        /// </summary>
