<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="MsgMapping"    type="TAP.MsgMappingSection, TAPService"/>
    <section name="log4net" type="System.Configuration.IgnoreSectionHandler" />
  </configSections>
  <log4net>
    <appender name="RollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="./log/logfile" />
      <appendToFile value="true" />
      <rollingStyle value="Composite" />
      <datePattern value="yyyy-MM-dd'.log'" />
      <maxSizeRollBackups value="-1" />
      <maximumFileSize value="1MB" />
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
      </layout>
    </appender>
    <appender name="Console" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <!-- Print the date in ISO 8601 format -->
        <conversionPattern value="%date[%thread] [%-5level] [%logger] - %message%newline" />
      </layout>
    </appender>
    
    <root>
      <level value="DEBUG" />
      <appender-ref ref="RollingLogFileAppender" />
      <appender-ref ref="Console"/>
    </root>
  </log4net>
  <appSettings>
    <add key="ServiceName" value="IMES.HP.TAP.2600" />
    <add key="Port" value="2600" />
    <add key="MaxMsgSize" value="2048" />
    <add key="MaxReceivedSize" value="2048" />
    <add key="MaxConnectionNum" value="20" />
    <add key="KeepAliveInterval" value="5000" />
    
    <!-- Get Message Name with delimiter-->
    <add key="MsgNameDelimiter" value="~,"/>
    
    <add key="CustomerId" value="HP"/>
	
	<!-- IMES Remote Service object URL-->
	<add key="IMESService.AOICheck" value="SA"/>
	<add key="IMESService._LabelLightGuide" value="FA"/>
	<!--SA service address -->
    <add key="SAAddress" value="127.0.0.1"/>
    <!--SA service port-->
    <add key="SAPort" value="8018"/>
	<!--FA service address -->
    <add key="FAAddress" value="127.0.0.1"/>
    <!--FA service port-->
    <add key="FAPort" value="8019"/>
	
  </appSettings>
  <connectionStrings>
    <add name="DbConnectionString" connectionString="Data Source=10.99.183.65;Initial Catalog=HPIMES;Persist Security Info=True;User ID=fis;Password=fis+123;MultipleActiveResultSets=True;" />
  </connectionStrings>

  <!-- IsolationLevel:
                                  Serializable = 0,        
                                  RepeatableRead = 1,       
                                  ReadCommitted = 2,       
                                  ReadUncommitted = 3,       
                                  Snapshot = 4,       
                                   Chaos = 5,      
                                   Unspecified = 6,
           TxnTimeOut:   unit is minute, default value 2minute
    -->
  <MsgMapping AssemblyName=".\SampleBizRule.dll"   
                          IsolationLevel="2" 
                          TxnTimeOut="2" 
                          IsNeedDB="N"  
                          IsNeedTxn="N">  
    <Mapping MsgName="Process_Completed" ClassName="BizRule.Activity.ProcessCompleted"/>	
    <Mapping MsgName="Get_LabelLocation" ClassName="BizRule.Activity.GetLabelLocation"/>						  
    <Mapping MsgName="Check_WC" ClassName="BizRule.Activity.CheckWC"/>
   
    <Mapping MsgName="Test_Completed" ClassName="BizRule.Activity.TestCompleted">    	
      <Parameter TestFailLimitCount="3"/>
    </Mapping> 
  </MsgMapping>
  
</configuration>